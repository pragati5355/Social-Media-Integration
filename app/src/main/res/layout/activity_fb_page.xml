<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FbPage">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/fbbg1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fb_profile_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/fbdp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="190dp"/>


        <ImageView
            android:id="@+id/person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/person_24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"/>


        <TextView
            android:id="@+id/txtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_toRightOf="@id/person"
            android:layout_marginTop="357dp"
            android:layout_marginLeft="27dp"/>


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pragati Gawade"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_toRightOf="@id/person"
            android:layout_marginTop="4dp"
            android:layout_below="@id/txtname"
            android:layout_marginLeft="25dp"/>


        <ImageView
            android:id="@+id/Emaillogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_email_24"
            android:layout_below="@id/person"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/Emaill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_toRightOf="@id/Emaillogo"
            android:layout_marginTop="467dp"
            android:layout_marginLeft="27dp"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pragatigawade5355@gmail.com"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/Emaillogo"
            android:layout_below="@id/Emaill"/>


        <Button
            android:id="@+id/logout"
            android:layout_width="210dp"
            android:layout_height="35dp"
            android:paddingHorizontal="8dp"
            android:drawableLeft="@drawable/fb_logo"
            android:text="Logout"
            android:gravity="center_horizontal|center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/email"
            android:layout_marginTop="70dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:background="@drawable/round_btn"/>


    </RelativeLayout>
</RelativeLayout>